
@{
    ViewData["Title"] = "Lyric submission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lyric submission</h1>
<form asp-controller="Lyrics" asp-action="Add" method="post">
    <div class="form-row">
        <div class="form-group col-6">
            <label for="Artist">Artist</label>
            <input id="Artist" name="Artist" class="form-control" placeholder="Song artist" />
        </div>
        <div class="form-group col-6">
            <label for="Title">Title</label>
            <input class="form-control" name="Title" id="Title" type="text" placeholder="Song title" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-6">
            <label for="Creators">Submitters or creators (i.e. you)</label>
            <input id="Creators" name="Creators" class="form-control" placeholder="Creators" />
        </div>
        <div class="form-group col-6">
            <label for="MusicUrl">Music URL</label>
            <input class="form-control" name="MusicUrl" id="MusicUrl" type="text" placeholder="Music URL (e.g. soundcloud or youtube link)" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-4">
            <label for="SourceName">Source name</label>
            <input class="form-control" name="SourceName" id="SourceName" type="text" placeholder="e.g. YouTube description, may be empty" />
        </div>
        <div class="form-group col-4">
            <label for="SourceLink">Source link</label>
            <input class="form-control" name="SourceLink" id="SourceLink" type="text" placeholder="Link to the source" />
        </div>
        <div class="form-group col-4">
            <label for="SourceDescription">Source description</label>
            <input class="form-control" name="SourceDescription" id="SourceDescription" type="text" placeholder="Source info, may be empty" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-12">
            <label for="Description">Description</label>
            <input class="form-control" name="Description" id="Description" type="text" placeholder="Short text with any information you feel is necessary for a viewer to know (e.g. source)" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-12">
            <label for="Lines">Lyrics</label>
            <textarea class="form-control" name="Lines" id="Lines" placeholder="LRC-formatted lyrics:&#10;[01:23.45]Sample Text" rows="10"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary w-100">Submit</button>
</form>

