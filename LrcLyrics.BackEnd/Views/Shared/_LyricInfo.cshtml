@model LrcLyrics.BackEnd.Models.Lyrics

@if (Model.Id != 0)
{
    <div class="d-inline">
        <a href="@Model.Url/Download">Download</a> -
        <a href="@Model.Url/Raw">Raw</a> -
    </div>
}
<a href="javascript:;" id="toggle-timestamps">Timestamps</a> -
<a href="javascript:;" id="toggle-info">More</a>
<br />
<div class="text-white-50">
    [<a id="timer">00:00.00</a>]Click line to seek time
</div>
<div id="lyrics-info" class="text-white-50 d-none">
    <hr />
    Creators: @Model.Creators
    @if (Model.DateAccepted != DateTime.MinValue)
    {
        <div>Added: @Model.DateAccepted</div>
    }
    @if (Model.DateUpdated != DateTime.MinValue)
    {
        <div>Added: @Model.DateUpdated</div>
    }
    @if (!string.IsNullOrEmpty(Model.MusicUrl))
    {
        <div>Music url: <a href="@Model.MusicUrl">@Model.MusicUrl</a></div>
    }
    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <div>Description: @Model.Description</div>
    }
    @if (Model.Id != 0)
    {
        <div>@Html.ActionLink("Submit edits", "EditLyrics", "Lyrics", new { id = Model.Id })</div>
    }
</div>